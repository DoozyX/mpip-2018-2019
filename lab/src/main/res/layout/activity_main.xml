<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_explicit_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_explicit_activity" />

    <Button
        android:id="@+id/btn_start_implicit_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_implicit_activity" />

    <Button
        android:id="@+id/btn_share_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_message" />

    <Button
        android:id="@+id/btn_select_and_show_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_and_show_image" />

    <TextView
        android:id="@+id/tv_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"/>
</LinearLayout>